<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_percent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jinbailiang.percent_layout.PercentLayoutActivity">

    <TextView
        android:background="#666000"
        app:layout_heightPercent="25%w"
        app:layout_widthPercent="50%w"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:background="#aa1144"
        app:layout_heightPercent="10%w"
        app:layout_widthPercent="75%w"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:background="#066000"
        app:layout_heightPercent="25%w"
        app:layout_widthPercent="25%w"
        android:layout_width="0dp"
        android:layout_height="0dp" />


</com.zhy.android.percent.support.PercentLinearLayout>
